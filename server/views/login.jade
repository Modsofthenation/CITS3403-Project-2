doctype html
html
  head
    title MatchMaker:Login
    link(rel='stylesheet', href='/css/create_profile.css')
    link(href='/css/layout.css', rel='stylesheet')
    script(type='text/javascript', src='/js/script.js')
  body

    header
      .navigationBarTop
        img(src='images/ml_adj.png', height='60', width='250', alt='Matchmaking logo')
        if (user)
          //TODO Link to account settings
          a(href='/logout') Logout
          a(href='/') #{user.username} 
        if (!user)
          a(href='/login') Login
          a(href='/register') Register
        a(href='matches.html') Matches
        a(href='/about') About
        a(href='/') Home

    #content
      .container
        if(!user)
          br
          br
          h3 Login Page
          br
          form(action="/login", method="post")
            label(for='username') Enter Username:
            input(id='username', type='text', name='username')
            label(for='password') Enter Password:
            input(id='password', type='password', name='password')
            input(type='submit', value='Login')
        if(user)
          h1 Login Page
          br
          p You are already logged in as #{user.username}
          a(href="/logout") Logout
