extends layout
block head
  title MatchMaker: User Settings
  link(rel='stylesheet', href='/css/create_profile.css')
  link(href='/css/layout.css', rel='stylesheet')
  script(type='text/javascript', src='/js/script.js')
  script(type='text/javascript', src='/js/register.js')

block content
  #content
    #innerContent
      .container
        br
        br
        h3 User Settings
        br
        form(action="/user", method="post")
          label(for='email') Enter New Email Address:
          input(id='email', type='email', name='email', value=user.email)

          label(for='password1') Enter New Password:
          input(id='password1', type='password', name='password')

          label(for='password2') Reenter New Password:
          input(id='password2', type='password')
          
          input(type='submit', onclick='return validateUserSettings()', value='Update')
          if (error)
            p(id='errobox') #{error}
          else
            p(id='errorbox')

        form(action="/delete", method="post")
          input(type='hidden', name='username', value=user.username)
          input(id="delete", type='submit', value="Delete Account")